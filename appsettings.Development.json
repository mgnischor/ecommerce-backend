{
    "ConnectionStrings": {
        "DefaultConnection": "Host=localhost;Database=ecommerce;Username=ecommerce;Password=ecommerce;Port=5432"
    },

    "OpenTelemetry": {
        "ServiceName": "ECommerce.Backend.Dev",
        "ServiceVersion": "0.1.17",
        "EnableConsoleExporter": true,
        "OtlpEndpoint": "http://localhost:4317"
    },

    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "Microsoft.AspNetCore": "Information",
            "Microsoft.EntityFrameworkCore": "Information",
            "Microsoft.EntityFrameworkCore.Database.Command": "Information",
            "ECommerce.API": "Debug",
            "ECommerce.Application": "Debug",
            "ECommerce.Infrastructure": "Debug"
        },
        "Console": {
            "IncludeScopes": true,
            "TimestampFormat": "yyyy-MM-dd HH:mm:ss ",
            "LogLevel": {
                "Default": "Debug"
            }
        },
        "Debug": {
            "LogLevel": {
                "Default": "Debug"
            }
        }
    }
}
